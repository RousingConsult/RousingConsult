body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    text-align: center;
    background-color: #f4f4f4;
}

header {
    background-color: #0073e6;
    color: white;
    padding: 20px;
}

nav a {
    color: white;
    text-decoration: none;
    margin: 0 15px;
}

section {
    padding: 40px 20px;
    background: white;
    margin: 20px;
    border-radius: 5px;
}

footer {
    background-color: #333;
    color: white;
    padding: 10px;
}
